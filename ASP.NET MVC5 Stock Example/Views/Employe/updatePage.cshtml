@model ASP.NET_MVC5_Stock_Example.Models.Entity.EMPLOYES
@{
    ViewBag.Title = "updatePage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("updateEmploye", "Employe", FormMethod.Post))
{
    <br />
    <h3>Update Product</h3>
    <br />
    <label>Name</label>
    <div style="margin-bottom: 15px">
        @Html.TextBoxFor(x => x.NAME, new { @class = "form-control" })
    </div>
    <label>Surname</label>
    <div style="margin-bottom:15px">
        @Html.TextBoxFor(x => x.SURNAME, new { @class = "form-control" })
    </div>
    <label>Department</label>
    <div style="margin-bottom:15px">
        @Html.TextBoxFor(x => x.DEPARTMENT, new { @class = "form-control" })
    </div>
   
    @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
    <div style="margin-top:15px">
        <button class="btn btn-warning">Save</button>
    </div>
}

